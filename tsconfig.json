{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./src/modules/",
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "./bundles/",
    "sourceMap": true,
    "target": "ES5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": ["./node_modules"],
  "include": ["./src/**/*", "./docs/**/*"],
  "files": [
    "./src/modules/index.ts"
  ]
}
